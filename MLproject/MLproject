name : sistem_machine_learning
conda_env : conda.yaml

entry_points:
  main:
    parameters:
      dataset:
        type: string
        default: "train_preprocessing.csv"
        description: "Nama file dataset CSV"
      n_iter:
        type: int
        default: 20
        description: "Jumlah iterasi RandomizedSearchCV"
      cv:
        type: int
        default: 5
        description: "Jumlah cross validation fold"
    command: "python modelling_tuning.py {dataset} {n_iter} {cv}"